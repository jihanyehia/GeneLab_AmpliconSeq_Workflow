FROM mambaorg/micromamba:2.0-ubuntu22.04

LABEL AUTHOR="Alexis"
LABEL EMAIL="lextorres46@gmail.com"

COPY --chown=$MAMBA_USER:$MAMBA_USER wget.yaml /tmp/wget.yaml

RUN micromamba create -y -f /tmp/wget.yaml && \
    micromamba clean --all --yes

RUN echo "eval $(micromamba shell hook --shell bash) && micromamba activate && micromamba activate /opt/conda/envs/wget/" > ~/.bashrc

ENV PATH="/opt/conda/envs/wget/bin/:/opt/conda/bin:$PATH"

CMD ["/bin/bash"]

