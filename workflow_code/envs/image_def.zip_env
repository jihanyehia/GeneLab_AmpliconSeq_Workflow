FROM mambaorg/micromamba:2.0-ubuntu22.04

LABEL AUTHOR="Olabiyi Obayomi"
LABEL EMAIL="obadbotanist@yahoo.com"

COPY --chown=$MAMBA_USER:$MAMBA_USER zip.yaml /tmp/zip.yaml

RUN micromamba create -y -f /tmp/zip.yaml && \
    micromamba clean --all --yes

RUN echo "eval $(micromamba shell hook --shell bash) && micromamba activate && micromamba activate /opt/conda/envs/zip/" > ~/.bashrc

ENV PATH="/opt/conda/envs/zip/bin/:/opt/conda/bin:$PATH"

CMD ["/bin/bash"]