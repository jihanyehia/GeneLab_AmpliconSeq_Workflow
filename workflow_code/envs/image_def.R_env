FROM mambaorg/micromamba:2.0-ubuntu22.04

MAINTAINER Olabiyi Obayomi <obadbotanist@yahoo.com>

COPY --chown=$MAMBA_USER:$MAMBA_USER R.yaml /tmp/R.yaml
RUN micromamba create -y -f /tmp/R.yaml && \
    micromamba clean --all --yes

RUN echo "eval $(micromamba shell hook --shell bash) && micromamba activate && micromamba activate /opt/conda/envs/dada-decipher-biomformat/" > ~/.bashrc

ENV PATH="/opt/conda/envs/dada-decipher-biomformat/bin/:/opt/conda/bin:$PATH"

CMD ["/bin/bash"]